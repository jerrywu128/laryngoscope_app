<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/pb_IQ"
    android:layout_gravity="bottom"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/close_IQ_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:src="@drawable/cancel_task">
            </ImageView>
            <Button
                android:id="@+id/brightness_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/brightness"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/hue_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/hue"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/saturation_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/saturation"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="20dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textSize="20dp">



            <Button
                android:id="@+id/change_iq_pwd_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_password"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_weight="0.1"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <Button
                android:id="@+id/white_balance_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/white_balance"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_weight="0.5"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/BLC_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BLC"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_weight="0.5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>